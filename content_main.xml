<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:padding="20dp"
        android:background="@drawable/boardbackground"
        android:weightSum="5"
    >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_marginTop="40dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button1L">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                android:id="@+id/button1"
                />
           </LinearLayout>

            <ImageView
                android:layout_width="@dimen/space_gridw"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                    />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button2L">
                <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                android:id="@+id/button2"
                 />
                </LinearLayout>


            <ImageView
                android:layout_width="@dimen/space_gridw"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                android:background="#FFFFFF"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button3L">
                <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                android:id="@+id/button3"
               />
                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button4L">
                <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                android:id="@+id/button4" />
                </LinearLayout>


            <ImageView
                android:layout_width="@dimen/space_gridw"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                android:background="#FFFFFF"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button5L">
                <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                android:id="@+id/button5" />
                </LinearLayout>


            <ImageView
                android:layout_width="@dimen/space_gridw"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                android:background="#FFFFFF"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button6L">
                <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                android:id="@+id/button6"
                    />
                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:weightSum="5"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button7L" >
                <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                android:id="@+id/button7"  />
                </LinearLayout>

            <ImageView
                android:layout_width="@dimen/space_gridw"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button8L" >
                <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="#FFFFFF"
                android:id="@+id/button8"
                />
                </LinearLayout>

            <ImageView
                android:layout_width="@dimen/space_gridw"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/button9L" >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#FFFFFF"
                android:layout_gravity="center_vertical"
                android:id="@+id/button9" />
             </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Opponet"
            android:id="@+id/textView"
            android:layout_weight="0.25" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player"
            android:id="@+id/textView2"
            android:layout_weight="0.25" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/oppSourceL" >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:src="@drawable/oppdrawable"
            android:id="@+id/oppSource" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/space_gridw"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            />
        <ImageView
            android:layout_width="@dimen/space_gridw"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            />
        <ImageView
            android:layout_width="@dimen/space_gridw"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"
            />
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/playerSourceL" >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_star_big_off"
            android:id="@+id/playerSource" />
       </LinearLayout>

    </LinearLayout>


</LinearLayout>
